# Server Environment Variables Example
# Copy this file to .env and fill in your actual API keys and configuration

# MongoDB Configuration - Use your own MongoDB database
MONGODB_URI=mongodb://localhost:27017/travel-planner
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/travel-planner?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-development-change-in-production

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CLIENT_URL=http://localhost:3000

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Amadeus API (for flight/hotel data)
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret
AMADEUS_ENVIRONMENT=test

# OpenWeather API (for weather data)
OPENWEATHER_API_KEY=your_openweathermap_api_key
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Unsplash API (for destination photos)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_SECRET_KEY=your_unsplash_secret_key

# Notifications (optional SMTP for email reminders)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Travel Planner <no-reply@example.com>"
NOTIFY_DAYS_AHEAD=2

# Social Authentication (server-side, used for token verification if added in future)
GOOGLE_CLIENT_ID=
FACEBOOK_APP_ID=

# Promotion/Marketing
PROMOTE_SECRET=your_promotion_secret_key

# OpenStreetMap Nominatim (Geocoding)
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
NOMINATIM_USER_AGENT=TravelPlanner/1.0
NOMINATIM_EMAIL=your-email@example.com
NOMINATIM_LIMIT=5
NOMINATIM_FORMAT=json

# Overpass API (Points of Interest)
OVERPASS_BASE_URL=https://overpass-api.de/api/interpreter
OVERPASS_TIMEOUT=25
OVERPASS_OUTPUT_FORMAT=json

# Wikipedia API (Place Info & Images)
WIKIPEDIA_BASE_URL=https://en.wikipedia.org/w/api.php
WIKIPEDIA_FORMAT=json
WIKIPEDIA_EXINTRO=true
WIKIPEDIA_EXPLAINTEXT=true
WIKIPEDIA_THUMB_SIZE=500

# OpenRouter API (for AI features)
OPENROUTER_API_KEY=your_openrouter_api_key

# Optional feature flags
ENABLE_NOTIFICATIONS=false
